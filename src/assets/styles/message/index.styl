.vb-message-warrp
  position fixed
  top 50%
  left 50%
  color #fff
  font-size 12px
  line-height 1.2
  border-radius 5px
  word-break break-all
  box-sizing border-box
  -webkit-transform translate3d(-50%, -50%, 0)
  transform translate3d(-50%, -50%, 0)
  background-color rgba(0, 0, 0, .7)
  .vb-message-container
    display flex
    flex-direction row
    flex-wrap nowrap
    min-width 120px
    margin 10px
    z-index 1024
    text-align center
    height 24px
    line-height 24px
  .vb-message-icon
    text-align right
  .vb-message-icon, .vb-close-icon
    flex 0.3
  .vb-message-content
   flex 1
   text-align left
   padding-left 5px
