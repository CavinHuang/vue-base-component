.swiper-container
  width 100%
  overflow hidden
  &,.swiper-warrp
    &,.swiper-item
      position relative
      width 100%
      overflow hidden
  .swiper-item
    float left
  .active-item
    display block
  .swiper-dots
    position absolute
    bottom 10px
    width 100%
    height 20px
    text-align center
    .swiper-dot-item
      display inline-block
      width 10px
      height 10px
      background rgba(0, 0, 0, 0.4)
      margin-left 10px
      border-radius 50%
  .swiper-slide-arrow

    // z-index -1
    .swiper-slide-left, .swiper-slide-right
      position absolute
      top 50%
      transform translateY(-50%)
      height 60px
      width 40px
      background rgba(0, 0, 0, 0.4)
      line-height 60px
      .swiper-arrow
        height 100%
        width 100%
        display block
        background-repeat no-repeat
        background-position center center
        background-size 20px
      .swiper-arrow-left
        background-image url('../../assets/images/arrow-prev.png')
      .swiper-arrow-right
        background-image url('../../assets/images/arrow-next.png')
    .swiper-slide-right
      right 0
