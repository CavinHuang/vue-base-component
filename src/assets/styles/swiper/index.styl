.swiper-warrp, .swiper-item {
  position: relative;
  height: 100%;
  overflow: hidden
}
.swiper-warrp {
  position: absolute;
  width: 100%;
}
.swiper-contaner .swiper-item {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transform: translate3d(-100%, 0, 0);
  display: none;
}
.swiper-contaner .slide-active {
  display: block;
  transform: none;
}
.swiper-dots {
  z-index: 666;
  position: absolute;
  height: 10px;
  left: 50%;
  bottom: 15px;
  transform: translate3d(-50%, 0, 0);
  .swiper-dot {
    width: 8px;
    height: 8px;
    display: inline-block;
    border-radius: 4px;
    background-color: rgba(0, 0, 0, 0.5);
    margin: 0 3px;
  }
  .dot-active {
    background: #fff;
  }
}
