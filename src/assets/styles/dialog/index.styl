.vb-dialog
  font-family "Microsoft YaHei" !important
  box-sizing border-box
  pointer-events auto
  // display none
  background-color #fff
  font-family arial, 'Hiragino Sans GB', sans-serif
  z-index 100
  height auto
  width 283px
  position absolute
  top 274px
  left 46px
  bottom auto
  .vb-dialog-title
    height 44px
    line-height 44px
    // border-bottom 1px solid #dcdcdc
    font-size 16px
  .vb-dialog-content
    text-align center
    font-size 14px
    color #333
    line-height 25px
    padding 10px 0 20px 0
  .vb-dialog-declare
    padding-left 10px
    padding-right 10px
    max-height 300px
    overflow auto
  .vb-dialog-btns
    height 45px
    line-height 45px
    border-collapse collapse
    border-spacing 0
    pointer-events auto
    text-align center
    width 100%
    border-top 1px solid #dcdcdc
    padding 0
    margin 0
    display flex
    .vb-dialog-btn
      background-color #fff
      display block
      height 100%
      color #47b5ca
      border none
      outline none
      cursor pointer
      box-sizing border-box
      padding 0
      flex 1
      box-sizing border-box
      border-left 1px solid #dcdcdc
      &first-child
        border none
    .vb-dialog-cancel
      color #999
.vb-alert
  border-radius 5px
  overflow hidden
